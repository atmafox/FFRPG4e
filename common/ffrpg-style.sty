	bool/magical/false;
	bool/ranged/false;

}

\newcommand*{\actype}[1][]{
	\krdsetkeys{actype}{#1}%
	\textit{%
		\ifac@ranged%
			Ranged
		\fi%
		\ifac@magical%
			Magical
		\fi%
		\ac@slow{}
	}%
	\ifac@reaction%
		reaction%
	\else%
		action%
	\fi%
}

